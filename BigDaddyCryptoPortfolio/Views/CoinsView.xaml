<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BigDaddyCryptoPortfolio.Views.CoinsView"
             Title="Coins">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView 
    x:Name="ListView" 
    ItemsSource="{Binding Coins}"
    ItemSelected="ListView_ItemSelected"
    ItemTapped="ListView_ItemTapped"
    SelectionMode="Single"
    HasUnevenRows="True"
 >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid
                 RowDefinitions="Auto, Auto"
                 ColumnDefinitions="Auto, Auto">
                            <Image
                     Grid.RowSpan="2"
                     Aspect="AspectFill"
                     WidthRequest="60"
                     HeightRequest="60"
                     Margin="5, 0, 0, 0"
                     Source="{Binding IconSource}"/>
                            <Grid RowDefinitions="Auto,Auto" Padding="10, 10, 0, 0" Grid.Column="1">
                                <Label
                         Text="{Binding Name}"
                         FontAttributes="Bold"/>
                                <Label
                         Grid.Row="1"
                         Text="{Binding Symbol}"/>
                            </Grid>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="Auto,Auto" Margin="10" >

                <Label Text="{Binding SelectedCoin.Name, StringFormat='Currently selected: {0}'}"/>
                <Label Margin="0, 10, 0, 0" Grid.Row="1" Text="{Binding SelectedCoin.Description, StringFormat='Description: {0}'}"/>
            </Grid>
        </ScrollView>
        

    </Grid>
    
    
    
    <!--<VerticalStackLayout Spacing="6">
       

       
   
        
    </VerticalStackLayout>-->
</ContentPage>